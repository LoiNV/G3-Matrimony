<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlpHeadersss"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_alignParentLeft="true"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivClickEditAvatar"
            android:layout_width="24dp"
            android:layout_margin="10dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_edittwo" />
    </RelativeLayout>

    <EditText
        android:id="@+id/etEditDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlpHeadersss"
        android:gravity="center"
        android:background="#7EDE0B"
        android:lines="2"
        android:textColor="#FFF"
        android:padding="10dp"
        android:textSize="18sp"
        android:text="Keep Smiling One day Life will tired of upsetting you :)"
        android:textStyle="bold|italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditDescription">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:padding="15dp"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="10"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Name Display:"
                    android:textColor="#575E6E"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/etEditName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#303030"
                    android:textSize="18sp" />

            </TableRow>


            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginBottom="15dp"
                android:background="#ccc" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birth Day:"
                    android:textColor="#575E6E"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/etEditBirthDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:gravity="center"
                    android:textColor="#303030"
                    style="@style/Widget.Styled.EditText"
                    android:layout_marginLeft="10dp"
                    />

                <!--<EditText-->
                    <!--android:id="@+id/etEditBirthDay"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:gravity="center"-->
                    <!--android:lines="1"-->
                    <!--android:textColor="#303030"-->
                    <!--android:textSize="18sp" />-->

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginBottom="15dp"
                android:background="#ccc" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marital Status:"
                    android:textColor="#575E6E"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/etEditMarital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#303030"
                    android:textSize="18sp" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginBottom="15dp"
                android:background="#ccc" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:textColor="#575E6E"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/etEditPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:lines="1"
                    android:textColor="#303030"
                    android:textSize="18sp" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginBottom="15dp"
                android:background="#ccc" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City:"
                    android:textColor="#575E6E"
                    android:textSize="18sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/etEditCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="#303030"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>

    </ScrollView>

</RelativeLayout>